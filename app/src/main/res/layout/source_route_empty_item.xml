<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/source_route_empty_img"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/d_20"
    android:layout_marginBottom="@dimen/d_20"
    android:src="@drawable/subscribe_message" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/d_20"
    android:orientation="vertical">

    <TextView
      android:id="@+id/source_route_empty_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="实时声音提醒"
      android:textColor="@color/text_color"
      android:textSize="@dimen/s_15" />

    <TextView
      android:id="@+id/source_route_empty_content"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="有新的货源信息第一时间声音提醒您"
      android:textColor="@color/grey_color"
      android:textSize="@dimen/s_14" />
  </LinearLayout>
</LinearLayout>