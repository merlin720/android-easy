<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_48"
    android:gravity="center_vertical">


    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_weight="1"
      android:drawableStart="@drawable/subscribe_message"
      android:drawablePadding="@dimen/d_5"
      android:gravity="center_vertical"
      android:text="匹配消息提醒已打开"
      android:textColor="@color/standard_blue"
      android:textSize="@dimen/s_14" />

    <Switch
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/d_20" />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="@dimen/d_20"
    android:background="#e1e1e1" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_48"
    android:gravity="center_vertical">

    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_weight="1"
      android:gravity="center_vertical"
      android:text="我的线路（2/10）"
      android:textColor="@color/text_color"
      android:textSize="@dimen/s_14" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_marginEnd="@dimen/d_20"
      android:layout_height="wrap_content"
      android:textSize="@dimen/s_15"
      android:textColor="@color/standard_blue"
      android:text="编辑" />
  </LinearLayout>
</LinearLayout>