<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/d_5"
    android:layout_marginTop="@dimen/d_5"
    android:layout_marginBottom="@dimen/d_5"
    android:text="车辆类型(可多选)"
    android:textColor="@color/text_color"
    android:textSize="@dimen/s_12" />

  <com.zhy.view.flowlayout.TagFlowLayout
    android:id="@+id/national_goods_select_car_flow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:max_select="-1" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/d_5"
    android:layout_marginTop="@dimen/d_5"
    android:layout_marginBottom="@dimen/d_5"
    android:text="货物类型(可多选)"
    android:textColor="@color/text_color"
    android:textSize="@dimen/s_12" />

  <com.zhy.view.flowlayout.TagFlowLayout
    android:id="@+id/national_goods_select_goods_flow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:max_select="-1" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/d_5"
    android:layout_marginTop="@dimen/d_5"
    android:layout_marginBottom="@dimen/d_5"
    android:text="发布时间"
    android:textColor="@color/text_color"
    android:textSize="@dimen/s_12" />


  <RadioGroup
    android:id="@+id/radio_group_button"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginStart="@dimen/d_5"
    android:layout_marginEnd="@dimen/d_5"
    android:background="@android:color/white"
    >
    <RadioButton
      android:id="@+id/radio_button_home"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/d_30"
      android:text="1天内"
      android:layout_marginEnd="@dimen/d_10"
      android:checked="true"
      android:textColor="@drawable/white_blue_selector"
      android:background="@drawable/tag_bg"
      style="@style/RadioGroupButtonStyle"
      />
    <RadioButton
      android:id="@+id/radio_button_discovery"
      android:layout_width="wrap_content"
      android:layout_marginEnd="@dimen/d_10"
      android:layout_height="@dimen/d_30"
      android:textColor="@drawable/white_blue_selector"
      android:text="3天内"
      android:background="@drawable/tag_bg"
      style="@style/RadioGroupButtonStyle"
      />
    <RadioButton
      android:id="@+id/radio_button_attention"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/d_30"
      android:layout_marginEnd="@dimen/d_10"
      android:textColor="@drawable/white_blue_selector"
      android:text="7天内"
      android:background="@drawable/tag_bg"
      style="@style/RadioGroupButtonStyle"
      />
    <RadioButton
      android:id="@+id/radio_button_boutique_source"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/d_30"
      android:textColor="@drawable/white_blue_selector"
      android:text="本月"
      android:background="@drawable/tag_bg"
      style="@style/RadioGroupButtonStyle"
      />

  </RadioGroup>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_48"
    android:layout_gravity="end">

    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@color/grey_color"
      android:gravity="center"
      android:text="重置"
      android:textColor="@color/white"
      android:textSize="@dimen/s_12" />

    <TextView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@color/standard_blue"
      android:gravity="center"
      android:text="确定"
      android:textColor="@color/white"
      android:textSize="@dimen/s_12" />
  </LinearLayout>
</LinearLayout>