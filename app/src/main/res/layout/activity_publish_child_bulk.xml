<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/qmui_config_color_gray_9"
  android:orientation="vertical">

  <com.qmuiteam.qmui.widget.QMUITopBar
    android:id="@+id/publish_child_bulk_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    app:qmui_topbar_left_back_drawable_id="@drawable/left_arrow"
    app:qmui_topbar_text_btn_color_state_list="@color/text_color"
    app:qmui_topbar_title_color="@color/text_color" />

  <LinearLayout
    android:id="@+id/publish_bulk_input_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d_10"
    android:layout_below="@+id/publish_bulk_one_commit_ll"
    android:layout_marginStart="@dimen/d_5"
    android:layout_marginEnd="@dimen/d_5"
    android:background="@drawable/corner_white_8"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/d_40"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:layout_weight="1"
        android:text="智能识别"
        android:textColor="@color/standard_blue"
        android:textSize="@dimen/s_14" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:layout_marginEnd="@dimen/d_10"
        android:text="查看发布规则"
        android:textColor="@color/qmui_config_color_gray_8"
        android:textSize="@dimen/s_14" />

    </LinearLayout>


    <EditText
      android:id="@+id/publish_bulk_intelligent_input_et"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_marginStart="@dimen/d_10"
      android:layout_marginEnd="@dimen/d_10"
      android:background="@color/cl_e1e1e1"
      android:gravity="top" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/d_15"
      android:layout_marginBottom="@dimen/d_20">

      <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

      <TextView
        android:id="@+id/publish_bulk_intelligent_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/corner_gray"
        android:paddingStart="@dimen/d_20"
        android:paddingTop="@dimen/d_3"
        android:paddingEnd="@dimen/d_20"
        android:paddingBottom="@dimen/d_3"
        android:text="清空"
        android:textColor="@color/white"
        android:textSize="@dimen/s_12" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/d_10"
        android:background="@drawable/corner_blue"
        android:paddingStart="@dimen/d_20"
        android:paddingTop="@dimen/d_3"
        android:paddingEnd="@dimen/d_20"
        android:paddingBottom="@dimen/d_3"
        android:text="识别"
        android:textColor="@color/white"
        android:textSize="@dimen/s_12" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/publish_bulk_one_commit_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/publish_child_bulk_title"
    android:layout_marginStart="@dimen/d_5"
    android:layout_marginTop="@dimen/d_10"
    android:layout_marginEnd="@dimen/d_5"
    android:background="@drawable/corner_white_8"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/d_48"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:text="出发地"
        android:textColor="@color/grey_color"
        android:textSize="@dimen/s_14" />

      <TextView
        android:id="@+id/publish_child_goods_dep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:layout_marginEnd="@dimen/d_10"
        android:layout_weight="1"
        android:drawableEnd="@drawable/arrow_right"
        android:text="请选择装货地址"
        android:textColor="@color/qmui_config_color_gray_8"
        android:textSize="@dimen/s_14" />


    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginStart="@dimen/d_5"
      android:layout_marginEnd="@dimen/d_5"
      android:background="@color/grey_color" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/d_48"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:text="卸货地"
        android:textColor="@color/grey_color"
        android:textSize="@dimen/s_14" />

      <TextView
        android:id="@+id/publish_child_goods_destination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:layout_marginEnd="@dimen/d_10"
        android:layout_weight="1"
        android:drawableEnd="@drawable/arrow_right"
        android:text="请选择卸货地址"
        android:textColor="@color/qmui_config_color_gray_8"
        android:textSize="@dimen/s_14" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/d_48"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:text="货物类型"
        android:textColor="@color/grey_color"
        android:textSize="@dimen/s_14" />

      <TextView
        android:id="@+id/publish_goods_goods_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:layout_marginEnd="@dimen/d_10"
        android:layout_weight="1"
        android:drawableEnd="@drawable/arrow_right"
        android:text="请选择"
        android:textColor="@color/qmui_config_color_gray_8"
        android:textSize="@dimen/s_14" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:text="货物类型"
        android:textColor="@color/grey_color"
        android:textSize="@dimen/s_14" />

      <TextView
        android:id="@+id/publish_bulk_car_type_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:layout_marginEnd="@dimen/d_10"
        android:layout_weight="1"
        android:drawableEnd="@drawable/arrow_right"
        android:text="请选择"
        android:textColor="@color/qmui_config_color_gray_8"
        android:textSize="@dimen/s_14" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/d_48"
      android:gravity="center_vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:text="备注"
        android:textColor="@color/grey_color"
        android:textSize="@dimen/s_14" />

      <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_10"
        android:layout_marginEnd="@dimen/d_10"
        android:layout_weight="1"
        android:background="@null"
        android:hint="选填"
        android:textColorHint="@color/qmui_config_color_gray_8"
        android:textSize="@dimen/s_14" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/d_10"
        android:background="@color/grey_color"
        android:paddingStart="@dimen/d_10"
        android:paddingTop="@dimen/d_3"
        android:paddingEnd="@dimen/d_10"
        android:paddingBottom="@dimen/d_3"
        android:text="单挑添加"
        android:textColor="@android:color/white" />

    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/bulk_intelligent_entry_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d_10"
    android:layout_above="@+id/publish_bulk_commit_btn"
    android:layout_below="@+id/publish_bulk_input_ll">

    <RelativeLayout

      android:layout_width="match_parent"
      android:layout_height="@dimen/d_48"
      android:background="@android:color/white">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableEnd="@drawable/arrow_down_gray"
        android:drawablePadding="@dimen/d_5"
        android:text="智能录入"
        android:textColor="@color/standard_blue"
        android:textSize="@dimen/s_14" />
    </RelativeLayout>
  </LinearLayout>

  <TextView
    android:id="@+id/publish_bulk_commit_btn"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_48"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="@dimen/d_20"
    android:layout_marginEnd="@dimen/d_20"
    android:layout_marginBottom="@dimen/d_20"
    android:background="@drawable/corner_blue"
    android:gravity="center"
    android:text="确认添加"
    android:textColor="@android:color/white" />
</RelativeLayout>