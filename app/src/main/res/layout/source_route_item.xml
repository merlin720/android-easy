<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="40dp"
  android:paddingStart="@dimen/d_10"
  android:paddingEnd="@dimen/d_10"
  android:background="@android:color/white"
  android:gravity="center_vertical"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/subscribe_route_item_from"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="东营/烟台/德州"
    android:textColor="@color/text_color"
    android:textSize="13sp" />

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/d_8"
    android:layout_marginEnd="@dimen/d_8"
    android:src="@drawable/from_to_arrow" />

  <TextView
    android:id="@+id/source_route_item_destination"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="西安"
    android:textColor="@color/text_color"
    android:textSize="13sp" />
  <TextView
    android:id="@+id/subscribe_route_content_go_sub"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="@dimen/d_10"
    android:background="@drawable/corner_white_with_border"
    android:paddingStart="@dimen/d_10"
    android:paddingTop="@dimen/d_3"
    android:paddingEnd="@dimen/d_10"
    android:paddingBottom="@dimen/d_3"
    android:text="去订阅"
    android:textColor="@color/standard_blue"
    android:textSize="@dimen/s_12" />
</LinearLayout>