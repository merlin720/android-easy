<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_gray_9"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/setting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:qmui_topbar_left_back_drawable_id="@drawable/left_arrow"
        app:qmui_topbar_text_btn_color_state_list="@color/text_color"
        app:qmui_topbar_title_color="@color/text_color" />

    <LinearLayout
        android:id="@+id/setting_head_ll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/d_5"
        android:layout_marginTop="@dimen/d_5"
        android:layout_marginEnd="@dimen/d_5"
        android:background="@drawable/corner_white_2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_20"
            android:layout_weight="1"
            android:text="头像"
            android:textColor="@color/text_color"
            android:textSize="@dimen/s_15" />

        <ImageView
            android:id="@+id/setting_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/v" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_10"
            android:layout_marginEnd="@dimen/d_10"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_5"
        android:layout_marginTop="@dimen/d_5"
        android:layout_marginEnd="@dimen/d_5"
        android:background="@drawable/corner_white_2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/d_48"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/d_20"
                android:paddingEnd="@dimen/d_10"
                android:text="认证信息"
                android:textColor="@color/text_color"
                android:textSize="@dimen/s_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_48"
                android:drawableEnd="@drawable/arrow_right"
                android:drawablePadding="@dimen/d_5"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/d_20"
                android:paddingEnd="@dimen/d_10"
                android:text="已认证"
                android:textColor="@color/grey_color"
                android:textSize="@dimen/s_15" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_48"
            android:drawableEnd="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/d_20"
            android:paddingEnd="@dimen/d_10"
            android:text="绑定银行卡"
            android:textColor="@color/text_color"
            android:textSize="@dimen/s_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/d_48"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/d_20"
                android:paddingEnd="@dimen/d_10"
                android:text="绑定微信"
                android:textColor="@color/text_color"
                android:textSize="@dimen/s_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_48"
                android:drawableEnd="@drawable/arrow_right"
                android:drawablePadding="@dimen/d_5"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/d_20"
                android:paddingEnd="@dimen/d_10"
                android:text="wangchun123"
                android:textColor="@color/grey_color"
                android:textSize="@dimen/s_15" />
        </LinearLayout>

        <TextView
            android:id="@+id/setting_change_pwd_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_48"
            android:drawableEnd="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/d_20"
            android:paddingEnd="@dimen/d_10"
            android:text="设置密码"
            android:textColor="@color/text_color"
            android:textSize="@dimen/s_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/d_48"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/d_20"
                android:paddingEnd="@dimen/d_10"
                android:text="版本升级"
                android:textColor="@color/text_color"
                android:textSize="@dimen/s_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d_48"
                android:drawableEnd="@drawable/arrow_right"
                android:drawablePadding="@dimen/d_5"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/d_20"
                android:paddingEnd="@dimen/d_10"
                android:text="1.2.2"
                android:textColor="@color/grey_color"
                android:textSize="@dimen/s_15" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d_5"
        android:layout_marginTop="@dimen/d_5"
        android:layout_marginEnd="@dimen/d_5"
        android:background="@drawable/corner_white_2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_48"
            android:drawableEnd="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/d_20"
            android:paddingEnd="@dimen/d_10"
            android:text="退出登录"
            android:textColor="@color/text_color"
            android:textSize="@dimen/s_15" />

    </LinearLayout>
</LinearLayout>