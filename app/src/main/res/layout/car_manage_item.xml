<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/d_5"
    android:layout_marginTop="@dimen/d_5"
    android:layout_marginEnd="@dimen/d_5"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_marginStart="@dimen/d_10"
      android:layout_marginTop="@dimen/d_10">

      <ImageView
        android:id="@+id/national_goods_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/subscribe_car_route" />

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/d_10"
          android:layout_marginTop="@dimen/d_3"
          android:text="鲁N12345/不锈钢/三类/16.9米/30吨"
          android:textColor="@color/text_color"
          android:textSize="@dimen/s_14" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/d_10"
          android:layout_marginTop="@dimen/d_3"
          android:text="驾驶员：曲胜利/随车电话13012345678 "
          android:textColor="@color/text_color"
          android:textSize="@dimen/s_14" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/d_10"
          android:layout_marginTop="@dimen/d_3"
          android:text="运输中/已完成：123单"
          android:textColor="@color/text_color"
          android:textSize="@dimen/s_12" />

      </LinearLayout>

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/subscribe_car_route" />
    </LinearLayout>


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/d_10"
      android:layout_marginTop="@dimen/d_10"
      android:layout_marginBottom="10dp"
      android:gravity="end">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/d_10"
        android:background="@drawable/corner_white_with_black_border"
        android:paddingStart="@dimen/d_5"
        android:paddingTop="2dp"
        android:paddingEnd="@dimen/d_5"
        android:paddingBottom="2dp"
        android:text="本车运单"
        android:textColor="@color/text_color"
        android:textSize="@dimen/s_12" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/d_10"
        android:background="@drawable/corner_white_with_border_f"
        android:paddingStart="@dimen/d_5"
        android:paddingTop="2dp"
        android:paddingEnd="@dimen/d_5"
        android:paddingBottom="2dp"
        android:text="删除"
        android:textColor="@color/standard_blue"
        android:textSize="@dimen/s_12" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/d_10"
        android:background="@drawable/corner_white_with_border_f"
        android:paddingStart="@dimen/d_5"
        android:paddingTop="2dp"
        android:paddingEnd="@dimen/d_5"
        android:paddingBottom="2dp"
        android:text="编辑"
        android:textColor="@color/standard_blue"
        android:textSize="@dimen/s_12" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>