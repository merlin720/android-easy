<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginStart="@dimen/d_5"
    android:layout_marginTop="@dimen/d_5"
    android:layout_marginEnd="@dimen/d_5"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/d_10"
      android:layout_marginStart="@dimen/d_10"
      >

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"

        android:text="内蒙古 鄂尔多斯"
        android:textColor="@color/text_color"
        android:textSize="@dimen/s_12" />

      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/d_8"
        android:layout_marginEnd="@dimen/d_8"
        android:src="@drawable/from_to_arrow" />

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="江苏 连云港"
        android:textColor="@color/text_color"
        android:textSize="@dimen/s_12" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/d_10"
        android:text="12-12"
        android:textColor="@color/grey_color"
        android:textSize="@dimen/s_10" />
    </LinearLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="@dimen/d_10"
      android:layout_marginTop="@dimen/d_3"
      android:text="三类/甲醇/200吨/不锈钢保温管"
      android:textColor="@color/text_color"
      android:textSize="@dimen/s_12" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/d_10"
      android:layout_marginBottom="10dp"
      android:layout_marginTop="@dimen/d_10">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="竞价截止:2019-06-25 17：20"
        android:textColor="@color/text_color"
        android:textSize="@dimen/s_12" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/d_10"
        android:background="@drawable/corner_white_with_black_border"
        android:paddingStart="@dimen/d_5"
        android:paddingTop="2dp"
        android:paddingEnd="@dimen/d_5"
        android:paddingBottom="2dp"
        android:text="再发一单"
        android:textColor="@color/text_color"
        android:textSize="@dimen/s_12" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/d_10"
        android:background="@drawable/corner_white_with_black_border"
        android:paddingStart="@dimen/d_5"
        android:paddingTop="2dp"
        android:paddingEnd="@dimen/d_5"
        android:paddingBottom="2dp"
        android:text="删除"
        android:textColor="@color/text_color"
        android:textSize="@dimen/s_12" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>